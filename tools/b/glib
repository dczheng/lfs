tar xvf $LFS_PKGS/glib-2.66.7.tar.xz \
&& cd glib-2.66.7 \
&& mkdir build \
&& cd build \
&& meson --prefix=/usr      \
      -Dman=true         \
      -Dselinux=disabled \
      ..                 \
&& ninja \
&& ninja install \
&& mkdir -p /usr/share/doc/glib-2.66.7 \
&& cp -r ../docs/reference/{NEWS,gio,glib,gobject} /usr/share/doc/glib-2.66.7
