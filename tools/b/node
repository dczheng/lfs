tar xvf $LFS_PKGS/node-v14.16.0.tar.xz \
&& cd node-v14.16.0 \
&& ./configure --prefix=/usr                  \
            --shared-cares                 \
            --shared-libuv                 \
            --shared-openssl               \
            --shared-nghttp2               \
            --shared-zlib                  \
            --with-intl=system-icu         \
&& make $MKOPT \
&& make install \
&& ln -sf node /usr/share/doc/node-14.16.0
